{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es2015",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "baseUrl": "src",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "public"
  ]
}
